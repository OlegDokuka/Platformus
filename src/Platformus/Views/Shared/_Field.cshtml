@model Platformus.ViewModels.Shared.FieldViewModel
<div class="field">
  <label for="field@(this.Model.Id)">@Model.Name</label>
  @if (this.Model.FieldType.Code == "TextBox")
  {
    <input id="field@(this.Model.Id)" name="field@(this.Model.Id)" type="text" />
  }
  else if (this.Model.FieldType.Code == "TextArea")
  {
    <textarea id="field@(this.Model.Id)" name="field@(this.Model.Id)"></textarea>
  }
  else if (this.Model.FieldType.Code == "DropDownList")
  {
    <select id="field@(this.Model.Id)" name="field@(this.Model.Id)">
      @foreach (var fieldOption in this.Model.FieldOptions)
      {
        @Html.Partial("_FieldOption", fieldOption)
      }
    </select>
  }
</div>