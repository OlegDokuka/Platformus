@model Platformus.ViewModels.Shared.FormViewModel
<div class="form">
  <form asp-controller="Default" asp-action="Form" method="post">
    <input id="formId" name="formId" type="hidden" value="@Model.Id" />
    @foreach (var field in this.Model.Fields)
    {
      @Html.Partial("_Field", field)
    }
    <div class="buttons">
      <button type="submit">Send</button>
    </div>
  </form>
</div>