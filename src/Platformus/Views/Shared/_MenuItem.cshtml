@model Platformus.ViewModels.Shared.MenuItemViewModel
<div class="menu-item">
  <a href="/@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName@Model.Url">@Model.Name</a>
  <div class="menu-items">
    @foreach (var menuItem in this.Model.MenuItems)
    {
      @Html.Partial("_MenuItem", menuItem)
    }
  </div>
</div>