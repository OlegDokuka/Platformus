@model Platformus.Areas.Backend.ViewModels.Forms.CreateOrEditViewModel
@{
  this.ViewBag.ActiveMenuItem = "forms";
}
<h1>@(this.Model.Id == null ? "Create" : "Edit") Form</h1>
<form method="post">
  <single-line-text-editor asp-for="Code" />
  <multilingual-single-line-text-editor asp-for="Name" asp-localizations="@Model.NameLocalizations" />
  <single-line-text-editor asp-for="Email" />
  <div class="buttons">
    <button class="positive" type="submit">Save</button>
    <a class="button neutral" href="/backend/forms">Cancel</a>
    <div class="clear"></div>
  </div>
</form>