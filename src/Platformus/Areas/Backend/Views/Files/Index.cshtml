@model Platformus.Areas.Backend.ViewModels.Files.IndexViewModel
@{
  this.ViewBag.ActiveMenuItem = "files";
}
<h1>Files <span>@Model.Grid.Pager.Total</span></h1>
@Html.Partial("_Grid", this.Model.Grid)
<div id="filesDragAndDropArea" class="files-drag-and-drop-area">
  Drop files here
</div>
<form action="/backend/files/create" enctype="multipart/form-data" method="post">
  <div class="buttons">
    <div class="button positive browse">
      <div>Upload file…</div>
      <input id="files" name="files" type="file" size="1" multiple onchange="$('form').submit();" />
    </div>
    <div class="clear"></div>
  </div>
</form>