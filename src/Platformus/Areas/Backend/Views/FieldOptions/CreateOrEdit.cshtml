@model Platformus.Areas.Backend.ViewModels.FieldOptions.CreateOrEditViewModel
@{
  this.ViewBag.ActiveMenuItem = "forms";
}
<h1>@(this.Model.Id == null ? "Create" : "Edit") Field Item</h1>
<form method="post">
  <multilingual-single-line-text-editor asp-for="Value" asp-localizations="@Model.ValueLocalizations" />
  <single-line-text-editor asp-for="Position" />
  <div class="buttons">
    <button class="positive" type="submit">Save</button>
    <a class="button neutral" href="/backend/forms">Cancel</a>
    <div class="clear"></div>
  </div>
</form>