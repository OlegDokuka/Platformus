@model Platformus.Areas.Backend.ViewModels.Shared.UserViewModel
<tr>
  <td>@Model.Name</td>
  <td><a href="/backend/credentials?userid=@Model.Id">Credentials</a></td>
  <td>@Model.Created.ToString()</td>
  <td class="buttons">
    <a class="button positive" href="@(this.Context.Request.CombineUrl("/backend/users/edit/" + this.Model.Id))">Edit</a>
    <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/users/delete/@Model.Id').show();"></a>
    <div class="clear"></div>
  </td>
</tr>