@model Platformus.Areas.Backend.ViewModels.Shared.GridViewModel
<div class="grid">
  <div class="header">
    @Html.Partial("_Pager", this.Model.Pager)
    @Html.Partial("_TakeSelector", this.Model.TakeSelector)
    @Html.Partial("_Filter", this.Model.Filter)
    <div class="clear"></div>
  </div>
  <table cellpadding="0" cellspacing="0">
    <colgroup>
      @foreach (var item in this.Model.GridColumns)
      {
      if (item.OrderBy == this.Model.OrderBy)
      {
      <col class="ordered-by" />
      }

      else
      {
      <col />
      }
      }
    </colgroup>
    <tr>
      @foreach (var item in this.Model.GridColumns)
      {
      @Html.Partial("_GridColumn", item)
      }
    </tr>
    @foreach (var item in this.Model.Items)
    {
    @Html.Partial(this.Model.TemplateName, item)
    }
  </table>
</div>