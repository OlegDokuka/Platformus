@model Platformus.Areas.Backend.ViewModels.Shared.FormViewModel
<div class="tree-node">
  <div class="tree-node-header">
    <div class="buttons">
      <a class="button positive" href="/backend/forms/edit/@Model.Id">Edit</a>
      <a class="button negative" href="#" onclick="return new Platformus.Overlays.DeleteForm('/backend/forms/delete/@Model.Id').show();"></a>
      <div class="clear"></div>
    </div>
    @Model.Name
    <div class="clear"></div>
  </div>
  <div class="tree-nodes">
    @foreach (var field in this.Model.Fields)
    {
      @Html.Partial("_Field", field)
    }
    <div class="buttons">
      <a class="button positive" href="/backend/fields/create?formid=@Model.Id">Create field</a>
      <div class="clear"></div>
    </div>
  </div>
</div>