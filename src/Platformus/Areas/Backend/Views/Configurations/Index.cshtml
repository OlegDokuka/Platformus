@model Platformus.Areas.Backend.ViewModels.Configurations.IndexViewModel
@{
  this.ViewBag.ActiveMenuItem = "configurations";
}
<h1>Configurations <span>@Model.Configurations.Count()</span></h1>
<div class="tree">
  @foreach (var configuration in this.Model.Configurations)
  {
    @Html.Partial("_Configuration", configuration)
  }
  <div class="tree-node">
    <div class="buttons">
      <a class="button positive" href="/backend/configurations/create">Create configuration</a>
      <div class="clear"></div>
    </div>
  </div>
</div>